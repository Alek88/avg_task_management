<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="price_tree_view" model="ir.ui.view">
        <field name="name">price.tree.view</field>
        <field name="model">sg.tm.price</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="partner_id"/>
                <field name="employee_id"/>
                <field name="price"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>
    
    <record id='action_price' model='ir.actions.act_window'> 
        <field name='name'>Price</field>
        <field name='res_model'>sg.tm.price</field> 
        <field name='view_mode'>tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create your first price.
            </p>
        </field>
    </record>

    <menuitem id='menu_price'
                name='Price'
                parent='menu_task_scheduling'
                action='action_price'
                sequence='200'
                />

</odoo>
