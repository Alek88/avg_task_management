<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sg_tm_res_partner_view_button" model="ir.ui.view">
        <field name="name">tm.res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(sg_task_management.action_task_for_partner)d" 
                        type="action"
                        icon="fa-book">
                    <div class="o_field_widget o_start_info">
                    <span class="o_stat_text">Tasks</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
    
</odoo>
