<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="set_time_wizard_view_form" model="ir.ui.view">
        <field name="name">set.time.wizard.view.form</field>
        <field name="model">set.time.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="task_id"/>
                    <field name="duration"/>
                </group>
                <footer>
                    <button name="action_set_time" 
                        type="object" 
                        string="Set" 
                        class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id='action_set_time_wizard' model='ir.actions.act_window'> 
        <field name="context">{"default_task_id": active_id}</field>
        <field name='name'>Set time</field>
        <field name='res_model'>set.time.wizard</field>
        <field name='view_mode'>form</field> 
        <field name='target'>new</field> 
        <field name='binding_model_id' ref='model_sg_tm_task'/> 
        <field name='binding_view_types'>form</field>
        <field name='binding_type'>action</field> 
    </record>
    
</odoo>
